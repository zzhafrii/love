    <h1>Will you be my girlfriend?</h1>
    <div id="buttons">
      <button class="btn yes" onclick="sayYes()">Yes</button>
      <button class="btn no" onclick="sayNo()">No</button>
    </div>
    <div id="response"></div>
    <button class="btn replay" onclick="replay()" style="display:none;">Replay</button>
  </div>

  <script>
    function sayYes() {
      document.getElementById('response').innerText = "Yay! I promise I'll treat you right üíñ";
      document.getElementById('buttons').style.display = 'none';
      document.querySelector('.replay').style.display = 'inline-block';
    }

    function sayNo() {
      document.getElementById('response').innerText = "You can't say no üò¢";
    }

    function replay() {
      document.getElementById('response').innerText = "";
      document.getElementById('buttons').style.display = 'block';
      document.querySelector('.replay').style.display = 'none';
    }
  </script>
